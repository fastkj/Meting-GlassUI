{
  "name": "meting-glassui",
  "version": "0.1.0",
  "description": "一个基于 Vue 3 的现代化玻璃风格音乐播放器，支持 Meting API",
  "author": "fastkj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fastkj/Meting-GlassUI"
  },
  "keywords": [
    "music-player",
    "vue",
    "meting",
    "vitepress",
    "glass-ui"
  ],
  "main": "dist/meting-glassui.umd.js",
  "module": "dist/meting-glassui.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.vue",
    "test": "vitest",
    "build:demo": "cd demo && npm run build"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.1",
    "vue-tsc": "^1.8.8"
  }
} 